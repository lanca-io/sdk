{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"rootDir": "./src",
		"target": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
