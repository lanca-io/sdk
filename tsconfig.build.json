{
  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": [
    "tests",
    "./src/**/*.spec.ts",
    "./src/**/*.mock.ts",
    "./src/**/*.handlers.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src"
  }
}