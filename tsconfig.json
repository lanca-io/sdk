{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"rootDir": "./src",
		"target": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"declaration": true,
		// "declarationDir": "./dist/declarations",
		"declarationMap": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "eslint.config.mjs", "tsup.config.ts"],
	"exclude": ["node_modules", "**/*.spec.ts", "tests/**/*"]
}
