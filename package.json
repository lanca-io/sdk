{
    "name": "@lanca/sdk",
    "version": "0.4.0",
    "description": "Lanca.io SDK built with Typescript",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "author": "Lanca.io",
    "license": "ISC",
    "type": "module",
    "homepage": "https://github.com/lanca-io/sdk",
    "bugs": {
        "url": "https://github.com/lanca-io/sdk/issues"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/lanca-io/sdk.git"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "link": "npm run build && npm link",
        "publish": "npm run format && npm run build && npm publish --access=public",
        "test": "vitest",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
        "lint": "npx eslint . --config eslint.config.mjs",
        "lint:fix": "npx eslint . --config eslint.config.mjs --fix",
        "prepare": "husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run format && npm run lint:fix && npm run build"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.5",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "buffer": "^6.0.3",
        "core-js": "^3.42.0",
        "esbuild-plugin-polyfill-node": "^0.3.0",
        "eslint": "^9.17.0",
        "globals": "15.9.0",
        "husky": "^9.1.7",
        "prettier": "^3.4.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.0",
        "vitest": "^2.1.8"
    },
    
    "dependencies": {
        "pino": "9.6.0",
        "pino-pretty": "13.0.0",
        "solady": "^0.1.17",
        "viem": "^2.28.4"
    },
    "keywords": [
        "sdk",
        "ethereum",
        "dapp",
        "bridge",
        "swap",
        "web3",
        "viem",
        "cross-chain",
        "defi",
        "cross-chain-applications",
        "cross-chain-bridge",
        "multi-chain",
        "metamask",
        "lanca",
        "dex",
        "concero"
    ]
}
